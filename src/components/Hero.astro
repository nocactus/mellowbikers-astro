---
const { image, title, subtitle, overlay = true } = Astro.props;
---
<section class="relative flex items-center justify-center text-center text-white h-[55vh] md:h-[65vh] bg-cover bg-center" style={`background-image: url(${image});`}>
  {overlay && <div class="absolute inset-0 bg-black/40"></div>}
  <div class="relative z-10 max-w-3xl px-6 py-10">
    <h1 class="text-4xl md:text-6xl font-extrabold drop-shadow">{title}</h1>
    {subtitle && <p class="mt-4 text-xl drop-shadow">{subtitle}</p>}
  </div>
</section>
