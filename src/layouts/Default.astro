---
const { title = "Mellowbikers", description = "Dé mountainbike vereniging van de Brabantse Wal" } = Astro.props;
---
<!doctype html><html lang="nl"><head>
<meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/>
<meta name="description" content={description}/>
<link rel="icon" href="/assets/favicon-32x32-1.png"/>
<title>{title}</title>
<link rel="stylesheet" href="/src/styles/global.css"/>
</head>
<body class="bg-slate-50 dark:bg-slate-900 text-slate-100">
<header class="border-b sticky top-0 bg-white/70 dark:bg-slate-900/70 backdrop-blur z-40">
  <div class="container flex items-center gap-6 h-16">
    <a href="/" class="flex items-center gap-3"><img src="/assets/mellowbikers-logo-2023.svg" alt="Mellowbikers" class="h-10 w-auto"/><span class="sr-only">Mellowbikers</span></a>
    <nav class="ml-auto flex items-center gap-4 text-sm font-semibold">
      <a href="/" class="hover:text-mellow-pink">Home</a>
      <a href="/agenda" class="hover:text-mellow-pink">Agenda</a>
      <a href="/spotlight" class="hover:text-mellow-pink">Spotlight</a>
      <a href="/bier" class="hover:text-mellow-pink">Bier</a>
      <a href="/lid-worden" class="hover:text-mellow-pink btn !py-1.5 !px-3">Lid worden</a>
    </nav>
  </div>
</header>
<main><slot /></main>
<footer class="mt-16 border-t"><div class="container py-8 text-sm flex items-center justify-between"><p>© {new Date().getFullYear()} Mellowbikers</p><p><a class="hover:text-mellow-pink" href="mailto:info@mellowbikers.nl">info@mellowbikers.nl</a></p></div></footer>
</body></html>
