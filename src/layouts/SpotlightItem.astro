---
const { frontmatter } = Astro.props;
import Default from "./Default.astro";
---
<Default title={`${frontmatter.title} | Mellowbikers`}>
  <section class="relative flex items-center justify-center text-center text-white h-[40vh] bg-cover bg-center" style={frontmatter.image ? `background-image: url(${frontmatter.image});` : ""}>
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="relative z-10 max-w-3xl px-6">
      <h1 class="text-4xl md:text-5xl font-extrabold drop-shadow">{frontmatter.title}</h1>
      {frontmatter.teaser && <p class="mt-3 text-lg drop-shadow">{frontmatter.teaser}</p>}
    </div>
  </section>
  <main class="container py-10">
    <article class="prose prose-slate dark:prose-invert max-w-none"><slot /></article>
  </main>
</Default>
